<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/backi"
    android:padding="16dp">

    <!-- First Vertical Layout for Temperature and Humidity -->

    <!-- Second Vertical Layout for pH Level, Water Level, and Nutrient Level -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="85dp"
        android:paddingEnd="8dp">

        <ImageView
            android:id="@+id/temperatureImage"
            android:layout_width="205dp"
            android:layout_height="146dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Temperature Icon"
            android:src="@drawable/tps_icon" />

        <TextView
            android:id="@+id/temperatureText"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginBottom="8dp"
            android:text="TPS: "
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/humidityImage"
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Humidity Icon"
            android:src="@drawable/humidity_icon" />

        <TextView
            android:id="@+id/humidityText"
            android:layout_width="157dp"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:text="Humidity: "
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="85dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <ImageView
            android:id="@+id/phLevelImage"
            android:layout_width="190dp"
            android:layout_height="149dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="pH Level Icon"
            android:src="@drawable/ph_icon" />

        <TextView
            android:id="@+id/phLevelText"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="pH Level: "
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"  />

        <ImageView
            android:id="@+id/waterLevelImage"
            android:layout_width="190dp"
            android:layout_height="137dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Water Level Icon"
            android:src="@drawable/water_icon" />

        <TextView
            android:id="@+id/waterLevelText"
            android:layout_width="171dp"
            android:layout_height="52dp"
            android:layout_marginBottom="8dp"
            android:text="Water Level: "
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/nutrientLevelImage"
            android:layout_width="175dp"
            android:layout_height="148dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Nutrient Level Icon"
            android:src="@drawable/nutrient_icon" />

        <TextView
            android:id="@+id/nutrientLevelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Nutrient Level: "
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"  />

    </LinearLayout>

</LinearLayout>
